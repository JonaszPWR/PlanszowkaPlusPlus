@page
@model PlanszowkaPlusPlus.Pages.Rentals.EditModel

@{
    ViewData["Title"] = "Edit";
}

<link rel="stylesheet" href="~/css/site.css" />

<h1>Edit</h1>

<h4>Rent</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Rent.Id" />
            <div class="form-group">
                <label asp-for="Rent.RentDate" class="control-label"></label>
                <input asp-for="Rent.RentDate" class="form-control" />
                <span asp-validation-for="Rent.RentDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rent.ReturnDate" class="control-label"></label>
                <input asp-for="Rent.ReturnDate" class="form-control" />
                <span asp-validation-for="Rent.ReturnDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rent.GameId" class="control-label"></label>
                <select asp-for="Rent.GameId" class="form-control" asp-items="ViewBag.GameId"></select>
                <span asp-validation-for="Rent.GameId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rent.MemberId" class="control-label"></label>
                <select asp-for="Rent.MemberId" class="form-control" asp-items="ViewBag.MemberId"></select>
                <span asp-validation-for="Rent.MemberId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
