@page
@model PlanszowkaPlusPlus.Pages.AdminDashboard.IndexModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<link rel="stylesheet" href="~/css/site.css" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="mt-3 ms-3">
    @if (User.Identity.IsAuthenticated)
    {
        <form method="post" class="d-inline" asp-page="/Account/Logout">
            <button type="submit" class="btn btn-secondary">Logout</button>
        </form>
    }
    <form method="get" action="/Index" class="d-inline ms-2">
        <button type="submit" class="btn btn-secondary">Main Page</button>
    </form>
</div>

<div class="text-center mt-5">
    <img src="~/planszowkaPlusPlusLogov2.png" alt="Logo" style="height: 100px;" class="mb-3" />
    <h1 class="display-4 mb-4">Admin Dashboard</h1>

    <div class="btn-group-vertical">
        <a href="/AdminDashboard/Employees" class="btn btn-primary btn-lg mb-2">Manage Employees</a>
        <a href="/AdminDashboard/Administrators" class="btn btn-success btn-lg mb-2">Manage Admins</a>
        <a href="/Members" class="btn btn-warning btn-lg mb-2">Members</a>
        <a href="/Games" class="btn btn-info btn-lg mb-2">Games</a>
        <a href="/Rentals" class="btn btn-danger btn-lg mb-2">Rentals</a>
        <a href="/GameTables" class="btn btn-dark btn-lg mb-2">Tables</a>
        <a href="/Reservations" class="btn btn-secondary btn-lg mb-2">Reservations</a>
        <a href="/Reservations/Confirm" class="btn btn-primary btn-lg">Confirm Reservations</a>
    </div>
</div>
