@page
@model PlanszowkaPlusPlus.Pages.AdminDashboard.IndexModel
@{
    ViewData["Title"] = "Index";
}

<link rel="stylesheet" href="~/css/site.css" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div>
    @if (User.Identity.IsAuthenticated)
    {
        <form method="post" class="form-inline" asp-page="/Account/Logout">
            <button type="submit" class="btn btn-secondary">Logout</button>
        </form>
    }
</div>
<div>
    <form method="get" action="/Index" class="d-inline">
        <button type="submit" class="btn btn-secondary">Main page</button>
    </form>
</div>

<div class="container border mt-4 p-4">
    <h1 class="display-4 mb-4">Admin Dashboard</h1>

    <div class="list-group">
        <a href="/AdminDashboard/Employees" class="list-group-item list-group-item-action">Manage Employees</a>
        <a href="/AdminDashboard/Administrators" class="list-group-item list-group-item-action">Manage Admins</a>
        <a href="/Members" class="list-group-item list-group-item-action">Members</a>
        <a href="/Games" class="list-group-item list-group-item-action">Games</a>
        <a href="/Rentals" class="list-group-item list-group-item-action">Rentals</a>
        <a href="/GameTables" class="list-group-item list-group-item-action">Tables</a>
        <a href="/Reservations" class="list-group-item list-group-item-action">Reservations</a>
        <a href="/AdminDashboard" class="list-group-item list-group-item-action" style="color:red">Reservation requests - NON FUNCTIONAL</a>
    </div>
</div>