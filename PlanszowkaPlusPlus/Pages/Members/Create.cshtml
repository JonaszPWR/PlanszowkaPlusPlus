@page
@model PlanszowkaPlusPlus.Pages.Members.CreateModel

@{
    ViewData["Title"] = "Create";
}

<link rel="stylesheet" href="~/css/site.css" />

<h1>Create</h1>

<h4>Member</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Member.Name" class="control-label"></label>
                <input asp-for="Member.Name" class="form-control" />
                <span asp-validation-for="Member.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member.Surname" class="control-label"></label>
                <input asp-for="Member.Surname" class="form-control" />
                <span asp-validation-for="Member.Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member.Email" class="control-label"></label>
                <input asp-for="Member.Email" type="email" class="form-control" />
                <span asp-validation-for="Member.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
            <label asp-for="Member.Interests" class="control-label"></label>
            <input asp-for="Member.Interests" class="form-control" />
            <span asp-validation-for="Member.Interests" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member.RegistrationDate" class="control-label"></label>
                <input asp-for="Member.RegistrationDate" class="form-control" />
                <span asp-validation-for="Member.RegistrationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <form method="get" action="/Members/Index" class="d-inline">
        <button type="submit" class="btn btn-secondary">Back to List</button>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
