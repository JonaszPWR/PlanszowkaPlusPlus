@page
@model PlanszowkaPlusPlus.Pages.Account.InitialAdminSetupModel
@{
    ViewData["Title"] = "Initial Admin Setup";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5 p-4 border rounded shadow-sm">
    <h2 class="mb-4">Initial Admin Setup</h2>

    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="mb-3 row">
            <label asp-for="Admin.Username" class="col-sm-2 col-form-label">Username</label>
            <div class="col-sm-6">
                <input asp-for="Admin.Username" class="form-control" />
                <span asp-validation-for="Admin.Username" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3 row">
            <label asp-for="Admin.Email" class="col-sm-2 col-form-label">Email</label>
            <div class="col-sm-6">
                <input asp-for="Admin.Email" class="form-control" />
                <span asp-validation-for="Admin.Email" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-4 row">
            <label asp-for="Password" class="col-sm-2 col-form-label">Password</label>
            <div class="col-sm-6">
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>

        <div class="d-flex">
            <button type="submit" class="btn btn-primary me-3">Create Admin</button>
            <a asp-page="/Account/Login" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
