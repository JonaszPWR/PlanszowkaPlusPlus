@page
@model PlanszowkaPlusPlus.Pages.Account.LoginModel
@{
}

<link rel="stylesheet" href="~/css/site.css" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div style="float:right">
    <a asp-page="/MemberUI/Reservation/Request" class="btn">Request a resevation</a>
</div>
<div class="container border mt-5 p-4">
    <h1>Login</h1>
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Credential.Username"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="Credential.Username" />
            </div>
            <span class="text-danger" asp-validation-for="Credential.Username"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Credential.Password"></label>
            </div>
            <div class="col-5">
                <input type="password" asp-for="Credential.Password" />
            </div>
            <span class="text-danger" asp-validation-for="Credential.Password"></span>
        </div>
        <div class="form-group row mt-4">
            <div class="col-1">
                <input type="submit" class="btn btn-primary" value="Login" />
            </div>
            <div class="col-3">
                <a asp-page="/Account/AdminLogin" class="btn btn-secondary">Admin Login</a>
            </div>
        </div>
    </form>
</div>