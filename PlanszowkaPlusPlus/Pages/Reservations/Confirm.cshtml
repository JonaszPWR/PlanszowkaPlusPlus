@page
@model PlanszowkaPlusPlus.Pages.Reservations.ConfirmModel

@{
    ViewData["Title"] = "Confirm";
}

<link rel="stylesheet" href="~/css/site.css" />

<div style="position: absolute; top: 10px; right: 10px;"></div>
    <a href="/Index">
        <img src="~/planszowkaPlusPlusLogov2.png" alt="Logo" style="height: 50px;" />
    </a>
</div>

<h2>Reservation Requests</h2>

@if (!Model.Requests.Any())
{
    <p>No current Requests</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>ImiÄ™ i nazwisko</th>
                <th>Email</th>
                <th>Data</th>
                <th>Godzina</th>
                <th>Stolik</th>
                <th>Akcja</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var r in Model.Requests)
        {
            <tr>
                <td>@r.FullName</td>
                <td>@r.Email</td>
                <td>@r.Date</td>
                <td>@r.TimeStart - @r.TimeEnd</td>
                <td>@r.TableId</td>
                <td>
                    <form method="post">
                        <input type="hidden" name="requestId" value="@r.Id" />
                        <input type="hidden" name="action" value="confirm" />
                        <button type="submit" class="btn btn-success">Confirm</button>
                    </form>
                    <form method="post">
                        <input type="hidden" name="requestId" value="@r.Id" />
                        <input type="hidden" name="action" value="reject" />
                        <button type="submit" class="btn btn-danger">Reject</button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
